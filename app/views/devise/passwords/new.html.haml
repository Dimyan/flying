- provide(:title, 'Напоминание пароля')

.page-header
  %h1 Сброс забытого пароля
= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: {method: :post, class: 'form-horizontal'}) do |f|
  = f.input :email, :wrapper => :prepend do
    %span.add-on
      %i.icon-envelope
    = f.input_field :email, :type => "email", :autofocus => true, :pattern => ".*"
  .control-group
    .controls
      = f.button :submit, "Отправить", :class => "btn-primary"
  .control-group
    .controls
      = render "devise/shared/links"