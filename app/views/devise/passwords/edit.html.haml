- provide(:title, 'Изменение пароля')

.page-header
  %h1 Изменение пароля
= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: 'form-horizontal' }) do |f|
  = f.hidden_field :reset_password_token
  = f.input :password, :label => "Новый пароль", :wrapper => :prepend do
    %span.add-on
      %i.icon-lock
    = f.input_field :password, :type => "password", :autofocus => true

  = f.input :password_confirmation, :required => true, :label => "Подтвердите новый пароль", :wrapper => :prepend do
    %span.add-on
      %i.icon-lock
    = f.input_field :password_confirmation, :type => "password"

  .control-group
    .controls
      = f.button :submit, "Изменить пароль", :class => "btn-primary"
  .control-group
    .controls
      = render "devise/shared/links"