- provide(:title, "Регистрация нового пользователя")

.page-header
  %h1 Регистрация
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f|
  = f.input :name, :wrapper => :prepend do
    %span.add-on
      %i.icon-user
    = f.input_field :password, :autofocus => true

  = f.input :email, :wrapper => :prepend do
    %span.add-on
      %i.icon-envelope
    = f.input_field :email, :type => "email", :pattern => ".*"

  = f.input :password, :wrapper => :prepend do
    %span.add-on
      %i.icon-lock
    = f.input_field :password, :type => "password"

  = f.input :password_confirmation, :required => true, :wrapper => :prepend do
    %span.add-on
      %i.icon-lock
    = f.input_field :password_confirmation, :type => "password"

  .control-group
    .controls
      = f.button :submit, "Зарегистрироваться", :class => "btn-primary"

  .control-group
    .controls
      = render "devise/shared/links"