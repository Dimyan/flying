%header#overview.row
  .span8
    = link_to image_tag('test_logo.jpg', :alt => 'Муховяз.RU'), root_path, {:id => 'logo'}
  .span4
    #subnav.pull-right
      %ul.nav.nav-pills.pull-right
        - if user_signed_in?
          %li
            = link_to "Здравствуйте, #{current_user.name}", edit_user_registration_path
          %li.divider-vertical
          %li
            = link_to 'Выход', destroy_user_session_path, :method=>'delete'
          %li.divider-vertical
          %li#fat-menu.dropdown
            %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Profile', current_user
              %li= link_to 'Settings', '#'
              %li.divider
              %li
                = link_to 'Выход', destroy_user_session_path, :method=>'delete'
        - else
          %li
            = link_to 'Регистрация', new_user_registration_path, class: 'sys-link'
          %li.divider-vertical
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => 'dropdown', 'class' => 'sys-link', :href => '#'}
              Войти
              %b.caret
            .dropdown-menu.right
              = form_tag user_session_path do
                .input-prepend
                  %span.add-on
                    %i.icon-envelope
                  = email_field_tag 'user[email]',nil,{:placeholder => "E-mail"}
                .input-prepend
                  %span.add-on
                    %i.icon-lock
                  = password_field_tag 'user[password]',nil,{:placeholder => "Пароль"}
                = check_box_tag 'user[remember_me]'
                = label_tag 'user[remember_me]', 'Запомнить меня'
                = submit_tag 'Войти', class: "btn btn-primary"
                = link_to "Напомнить пароль", new_password_path('user')
            -#= link_to 'Войти', new_user_session_path
    #cart.pull-right
      .heading.pull-right
        %h4 Корзина покупок
        %a
          %span#cart-total Товаров: 0 (0.00 р.)
      .content
        .empty Ничего не куплено!